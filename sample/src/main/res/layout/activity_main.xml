<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.dev.tanakov.zodiacviewsample.MainActivity">

    <FrameLayout
        android:id="@+id/zodiac_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@android:color/white"/>

    <com.dev.tanakov.zodiacview.ZodiacView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:zv_color_relation="@android:color/holo_orange_light"
        app:zv_color_star="@android:color/holo_orange_light"
        app:zv_speed="5"
        app:zv_star_count="10"/>
</LinearLayout>
